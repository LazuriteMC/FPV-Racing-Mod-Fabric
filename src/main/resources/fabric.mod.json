{
  "schemaVersion": 1,
  "id": "quadz",
  "version": "${version}",

  "name": "Quadz",
  "description": "An FPV drone simulator for Fabric.",
  "authors": [ "The Lazurite Team" ],
  "contact": {
    "homepage": "https://lazurite.dev",
    "sources": "https://github.com/lazuritemc/quadz",
    "issues": "https://github.com/lazuritemc/quadz/issues"
  },

  "license": "MIT",
  "icon": "assets/quadz/icon.png",

  "environment": "*",
  "entrypoints": {
    "cardinal-components-item": [ "dev.lazurite.quadz.Quadz" ],
    "modmenu": [ "dev.lazurite.quadz.client.render.ui.ConfigScreen" ],
    "main": [ "dev.lazurite.quadz.Quadz" ],
    "client": [
      "dev.lazurite.quadz.Quadz",
      "dev.lazurite.quadz.client.render.RenderInitializer"
    ]
  },

  "mixins": [
    "quadz.client.mixins.json",
    "quadz.common.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.16.x"
  },

  "suggests": {
    "flamingo": "*"
  },

  "custom": {
    "cardinal-components": [
      "quadz:goggles_container",
      "quadz:transmitter_container",
      "quadz:quadcopter_container"
    ]
  }
}
{
  "schemaVersion": 1,
  "id": "fpvracing",
  "version": "${version}",

  "name": "FPV Racing Mod",
  "description": "This mod adds FPV racing drones to Minecraft.",
  "authors": [ "The Lazurite Team" ],
  "contact": {
    "homepage": "https://lazurite.dev",
    "sources": "https://github.com/lazuritemc/fpv-racing-mod-fabric",
    "issues": "https://github.com/lazuritemc/fpv-racing-mod-fabric/issues"
  },

  "license": "MIT",
  "icon": "assets/fpvracing/icon.png",

  "environment": "*",
  "entrypoints": {
    "cardinal-components-item": [ "dev.lazurite.fpvracing.FPVRacing" ],
    "modmenu": [ "dev.lazurite.fpvracing.client.render.ui.ConfigScreen" ],
    "main": [ "dev.lazurite.fpvracing.FPVRacing" ],
    "client": [
      "dev.lazurite.fpvracing.FPVRacing",
      "dev.lazurite.fpvracing.client.render.RenderInitializer"
    ]
  },

  "mixins": [ "fpvracing.mixins.json" ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.16.x"
  },

  "suggests": {
    "flamingo": "*"
  },

  "custom": {
    "cardinal-components": [
      "fpvracing:goggles_container",
      "fpvracing:transmitter_container",
      "fpvracing:quadcopter_container"
    ]
  }
}